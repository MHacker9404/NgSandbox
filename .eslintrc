{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "max-len": ["error", { "code": 125 }],
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "react/jsx-closing-bracket-location": [1, "line-aligned"],
        "arrow-parens": ["error", "as-needed"],
        "linebreak-style": 0
    }
}
